<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iiiiii.accountbook.regular_expense.command.repository.CommandRegularExpenseMapper">
    <insert id="registRegularExpense" parameterType="com.iiiiii.accountbook.regular_expense.command.dto.RegularExpenseDTO" >
        INSERT
          INTO REGULAR_EXPENSE
        (
          EXPENSE_DATE
        , NAME
        , AMOUNT
        , MEMBER_CODE
        , ASSET_CODE
        , ACC_CATEGORY_CODE
        )
          VALUES
        (
          #{expenseDate}
        , #{name}
        , #{amount}
        , #{memberCode}
        , #{assetCode}
        , #{accCategoryCode}
        )
    </insert>

    <delete id="deleteRegularExpense" parameterType="_int">
        DELETE
          FROM REGULAR_EXPENSE
         WHERE CODE = #{regularExpenseCode}
    </delete>

</mapper>
